---
import '../../styles/global.css';
import type { SanityDocument } from "@sanity/client";
import Layout from "../../layouts/Layout.astro";
import { loadQuery } from '../../util/load-query';

const POSTS_QUERY = `*[
  _type == "post"
  && defined(slug.current)
]|order(publishedAt desc)[0...12]{_id, title, slug, publishedAt}`;

const { data: posts } = await loadQuery<Array<SanityDocument>>({
  query: POSTS_QUERY,
  params: {},
  enabled: true
});
---
<Layout>
  <main class="container mx-auto min-h-screen max-w-3xl p-8">
    <h1 class="text-4xl font-bold mb-8">Posts</h1>
    <ul class="flex flex-col gap-y-4">
      {posts.map((post) => (
          <li class="hover:underline">
            <a href={`/posts/${post.slug.current}`}>
              <h2 class="text-xl font-semibold">{post.title}</h2>
              <p>{new Date(post.publishedAt).toLocaleDateString()}</p>
            </a>
          </li>
        ))}
    </ul>
  </main>
</Layout>